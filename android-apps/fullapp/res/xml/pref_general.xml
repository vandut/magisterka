<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:key="custom_ips_checkbox"
        android:defaultValue="false"
        android:summary="@string/pref_description_custom_ips"
        android:title="@string/pref_title_custom_ips" />
    
    <EditTextPreference
        android:key="general_ip_address"
        android:inputType="phone"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_general_ip_address"
        android:defaultValue="@string/pref_default_general_ip_address" />

</PreferenceScreen>